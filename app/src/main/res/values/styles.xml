<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.MobileDev.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/primaryColor</item>
        <item name="shapeAppearance">@style/ShapeAppearance.MobileDev.SmallComponent</item>
        <item name="android:layout_margin">8dp</item>o
    </style>

    <style name="Widget.MobileDev.Button.BackButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:src">@drawable/ic_arrow_back_black_24dp</item>
    </style>

    <style name="ShapeAppearance.MobileDev.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="Widget.MobileDev.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="shapeAppearance">@style/ShapeAppearance.MobileDev.SmallComponent</item>
        <item name="android:layout_marginVertical">16dp</item>
    </style>


</resources>